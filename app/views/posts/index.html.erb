<h1>All the posts are here</h1>

<% @posts.each do |post| %>
  <ul>
    <li>
      <%= link_to post.title, post %>
        <% if user_signed_in? %>
          <%= post.user.name %>
        <% end %>
    </li>
  </ul>
<% end %>

